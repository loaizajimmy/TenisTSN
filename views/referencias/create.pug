                            div(class='two wide column')
                                div(class='field')
                                    label Fotos
                                    .ui.black.animated.button(id='btnAddImages' tabindex='0')
                                        .visible.content
                                            i.large.circle.plus.icon
                                        .hidden.content
                                            | Agregar
                            div(class='two wide column')
                                div(class='field')
                                    label Guardar
                                    .ui.green.animated.submit.button(tabindex='0', id='btnGuardar')
                                        .visible.content
                                            i.large.right.arrow.icon
                                        .hidden.content
                                            | Agregar
                            div(class='two wide column')
                                div(class='field')
                                    label Cancelar
                                    .ui.green.animated.reset.button(tabindex='0')
                                        .visible.content
                                            i.large.ban.icon
                                        .hidden.content
                                            | Cancelar

                    div(class='row')
                        div(class='ten wide column')
                            div(id='divDrag' class='hidden')
                                button(type='submit' id='perra')
                                form#my-dropzone.dropzone(action='/referencias/create/' + tenisID, method='POST', enctype='multipart/form-data')

                    div(class='row')
                        div(class='ten wide column')
                            table.ui.red.table
                                thead
                                    tr
                                        th Talla
                                        th Color
                                        th Cantidad
                                        th Opciones
                                tbody
                                    each val, index in  referencias
                                        tr
                                            td #{val.talla}
                                            td #{val.color}
                                            td #{val.cantidad}
                                            td
                                                a(class='ui button basic icon' href='#' data-tooltip='Modificar' data-position='top center' data-inverted='')
                                                    i(class='edit large blue icon')
                                                a(class='ui button basic icon' href='#' data-tooltip='Eliminar' data-position='top center' data-inverted='')
                                                    i(class='trash large red icon')

block temp-scripts
    script.
        Dropzone.options.myDropzone = {
            // Prevents Dropzone from uploading dropped files immediately
            maxFileSize: 4,
            parallelUploads: 10,
            uploadMultiple: true,
            autoProcessQueue: false,
            addRemoveLinks: true,

            init: function () {
                var submitButton = document.querySelector("#perra")
                myDropzone = this; // closure

                submitButton.addEventListener("click", function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    if (myDropzone.getQueuedFiles().length === 0) {
                        console.log('Entro por submit');
                        $("#my-dropzone").submit();
                    }
                    else {
                        console.log('Entro por cola');
                        myDropzone.processQueue(); // Tell Dropzone to process all queued files.

                    }
                });
                // You might want to show the submit button only when
                // files are dropped here:
                this.on("complete", function () {
                    location.reload();
                });
            }
        };


    script(src='/js/validation.js')

