                                        div(class='item', data-value='2')
                                            div(class='ui teal empty circular label')
                                            | Cra 19
                                        div(class='item', data-value='3')
                                            div(class='ui black empty circular label')
                                            | Cra 20
                                        div(class='item', data-value='4')
                                            div(class='ui green empty circular label')
                                            | Los Petetes


                            div(class='field')
                                label Estante
                                div(class='ui selection dropdown')
                                    input(type='hidden', name='estante', value=estanteID)
                                    div(class='default text') Estante
                                    i(class='dropdown icon')
                                    div(class='menu')
                                        div(class='item', data-value='1')
                                            div(class='ui red empty circular label')
                                            | Número 1
                                        div(class='item', data-value='2')
                                            div(class='ui teal empty circular label')
                                            | Número 2




                        div(class='three fields')
                            div(class='field')
                                label Estilo
                                div(class='ui selection dropdown')
                                    input(type='hidden', name='estilo', value=estilo)
                                    div(class='default text') Estilo
                                    i(class='dropdown icon')
                                    div(class='menu')
                                        div(class='item', data-value='Zapatilla')
                                            div(class='ui red empty circular label')
                                            | Zapatilla
                                        div(class='item', data-value='Bota')
                                            div(class='ui teal empty circular label')
                                            | Bota


                            div(class='field')
                                label Genero
